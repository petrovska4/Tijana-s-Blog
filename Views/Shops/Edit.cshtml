@model TijanasBlog.ViewModels.ShopsCreateEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Shops</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Shops.Id" />
            <div class="form-group">
                <label asp-for="Shops.Name" class="control-label"></label>
                <input asp-for="Shops.Name" class="form-control" />
                <span asp-validation-for="Shops.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Shops.Logo" class="control-label"></label>
                <input asp-for="Shops.Logo" name="Image" type="file" class="form-control" />
                <span asp-validation-for="Shops.Logo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
