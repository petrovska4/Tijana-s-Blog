@model TijanasBlog.ViewModels.BrandsViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Brands" asp-action="Index" method="get">
    <p>
        <label for="name">Name:</label>
        <input id="name" type="text" name="name" asp-for="SearchName" class="form-control" />
        <input style="margin-top: 5px" type="submit" value="Filter" class="btn btn-outline-info" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Brands[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Brands[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Brands[0].IsCrueltyFree)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Brands[0].BasedWhere)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Brands[0].PriceRange)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Brands) {
        <tr>
            <td>
                <img height="150px" src="@Html.DisplayFor(modelItem => item.Image)" alt="">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsCrueltyFree)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BasedWhere)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PriceRange)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
